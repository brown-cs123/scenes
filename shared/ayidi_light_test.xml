<scenefile>
	<globaldata>
		<diffusecoeff v="0.6"/>
		<specularcoeff v="0.6"/>
		<ambientcoeff v="0.6"/>
	</globaldata>

	<cameradata>
		<pos x="0" y="2" z="5"/>
		<focus x="0" y="0" z="0"/>
		<up x="0" y="1" z="0"/>
		<heightangle v="45"/>
	</cameradata>

	<lightdata>
		<id v="0"/>
		<color r=".5" g=".5" b=".5"/>
		<position x="0" y="2" z="0"/>
	</lightdata>

	<lightdata>
		<id v="1"/>
		<type v="directional"/>
		<color r=".5" g=".5" b=".5"/>
		<direction x="0" y="-1" z="0"/>
	</lightdata>

	<lightdata>
		<id v="2"/>
		<type v="spot"/>
		<color r=".5" g=".5" b=".5"/>
		<direction x="0" y="-1" z="0"/>
		<position x="0" y="2" z="0"/>
		<penumbra v="2.0" />
		<angle v="80" />
	</lightdata>

	<object type="tree" name="root">

		<transblock>
			<scale x=".2" y=".2" z=".2"/>
			<object type="primitive" name="sphere" >
				<diffuse r="1" g="1" b="1"/>
			</object>
		</transblock>

		<transblock>
			<translate x="0" y="0" z="1"/>
			<scale x=".2" y=".2" z=".2"/>
			<object type="primitive" name="sphere" >
				<diffuse r="0" g="0" b="1"/>
			</object>
		</transblock>

		<transblock>
			<translate x="0" y="1" z="0"/>
			<scale x=".2" y=".2" z=".2"/>
			<object type="primitive" name="sphere" >
				<diffuse r="0" g="1" b="0"/>
			</object>
		</transblock>

		<transblock>
			<translate x="1" y="0" z="0"/>
			<scale x=".2" y=".2" z=".2"/>
			<object type="primitive" name="sphere" >
				<diffuse r="1" g="0" b="0"/>
			</object>
		</transblock>

		<transblock>
			<translate x="0" y="-0.5" z="0"/>
			<scale x="10" y="0.05" z="10"/>
			<object type="primitive" name="cube" >
				<diffuse r="1" g="1" b="1"/>
			</object>
		</transblock>

	</object>

</scenefile>

